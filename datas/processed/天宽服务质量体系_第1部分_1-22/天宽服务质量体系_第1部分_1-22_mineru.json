    {
        "type": "text",
        "text": "二、质量管理部组织架构图",
        "text_level": 1,
        "page_idx": 19
    },
    {
        "type": "image",
        "img_path": "/home/wumingxing/tk_rag/datas/processed/天宽服务质量体系_第1部分_1-22/images/ec65407fa6a41e82638d4791bd3f3d3919510e001d0419efe05f83654f97a902.jpg",
